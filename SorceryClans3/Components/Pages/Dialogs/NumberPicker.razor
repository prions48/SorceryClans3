@namespace SorceryClans3.Components.Pages.Dialogs
@inject IDialogService dialogService

<MudStack Row>
    <MudNumericField T="int?" Min="1" @bind-Value="Number" Label="@Label" Max="@Max" />
    <MudButton OnClick="Cancel" Variant="Variant.Filled" Color="Color.Default">Cancel</MudButton>
    <MudButton OnClick="Submit" Variant="Variant.Filled" Disabled="Number == null" Color="Color.Success">Submit</MudButton>
</MudStack>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public int Max { get; set; } = 99;
    [Parameter] public string Label { get; set; } = "Enter Value";
    private int? Number { get; set; } = null;
    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(Number));
    }
    void Cancel() => MudDialog.Close(DialogResult.Cancel());
}